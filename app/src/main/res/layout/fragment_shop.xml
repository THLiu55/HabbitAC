<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Me">

        <com.example.habitac.View.WheelView
            android:id="@+id/wv_wheel"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp" />

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignStart="@+id/wv_wheel"
            android:layout_alignTop="@+id/wv_wheel"
            android:layout_alignEnd="@+id/wv_wheel"
            android:layout_alignBottom="@+id/wv_wheel"
            android:layout_marginStart="144dp"
            android:layout_marginTop="121dp"
            android:layout_marginEnd="145dp"
            android:layout_marginBottom="149dp"
            android:src="@drawable/pointer" />
</RelativeLayout>