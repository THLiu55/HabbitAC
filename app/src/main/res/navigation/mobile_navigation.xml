<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">


    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.habitac.fragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_testTaskDetails2"
            app:destination="@id/testTaskDetails2"
            app:enterAnim="@anim/slide_from_left"
            app:exitAnim="@anim/slide_from_right" />
    </fragment>

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.example.habitac.fragment.CalendarFragment"
        android:label="Calendar"
        tools:layout="@layout/fragment_calendar" />

    <fragment
        android:id="@+id/navigation_rank"
        android:name="com.example.habitac.fragment.RankFragment"
        android:label="Rank"
        tools:layout="@layout/fragment_rank" />
    <fragment
        android:id="@+id/navigation_me"
        android:name="com.example.habitac.fragment.Me"
        android:label="fragment_me"
        tools:layout="@layout/fragment_me" />
    <fragment
        android:id="@+id/testTaskDetails2"
        android:name="com.example.habitac.fragment.TestTaskDetails"
        android:label="fragment_test_task_details"
        tools:layout="@layout/fragment_test_task_details" >
        <action
            android:id="@+id/action_testTaskDetails2_to_navigation_home"
            app:destination="@id/navigation_home"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_from_left" />
    </fragment>


</navigation>